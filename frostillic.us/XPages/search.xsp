<?xml version="1.0" encoding="UTF-8"?>
<xp:view xmlns:xp="http://www.ibm.com/xsp/core" xmlns:xe="http://www.ibm.com/xsp/coreex" xmlns:xc="http://www.ibm.com/xsp/custom" xmlns:ff="http://frostillic.us/framework"
	beforePageLoad="#{controller.beforePageLoad}" afterPageLoad="#{controller.afterPageLoad}" pageTitle="${translation.titlePrefix}${translation.search}">

	<xp:this.data>
		<ff:modelListData var="posts" managerName="Posts" key="all" search="${param.q}" sortColumn="Posted" sortOrder="descending"/>
	</xp:this.data>

	<xc:layout navigationPath="/Posts/Search">
		<xp:this.facets>
			<xe:breadCrumbs xp:key="BreadCrumbs">
				<xe:this.treeNodes>
					<xe:basicLeafNode href="/" imageAlt="icon-home home-icon" label="${translation.home}"/>
					<xe:basicLeafNode label="${translation.search}"/>
				</xe:this.treeNodes>
			</xe:breadCrumbs>
		</xp:this.facets>
		
		<xp:div themeId="Message">
			<xp:text value="${controller.message}"/>
		</xp:div>
		
		<xc:list_posts value="#{posts}" rows="15"/>
	</xc:layout>
</xp:view>
