<?xml version="1.0" encoding="UTF-8"?>
<xp:view xmlns:xp="http://www.ibm.com/xsp/core" xmlns:xe="http://www.ibm.com/xsp/coreex" xmlns:xc="http://www.ibm.com/xsp/custom" xmlns:ff="http://frostillic.us/framework">
	<xp:repeat value="#{compositeData.value}" rows="#{empty compositeData.rows ? 15 : compositeData.rows}" var="post">
		<xc:blogPost authorName="#{post.$$Creator}" posted="#{post.Posted}" title="#{post.$$Title}" pageName="post" postId="#{post.id}"
			commentCount="#{post.commentCount}" thread="#{post.Thread}">
			<xp:text contentType="HTML" value="#{post.body}"/>
		</xc:blogPost>
	</xp:repeat>
</xp:view>
