        					<executable>/bin/sh</executable>
        					<workingDirectory>.</workingDirectory>
        					<environmentVariables>
        						<PATH>/bin:/usr/bin:/usr/local/bin</PATH>
        					</environmentVariables>
        					<arguments>
        						<argument>-c</argument>
        						<argument>
        							rm -f src/main/ruby/blog/*.war
