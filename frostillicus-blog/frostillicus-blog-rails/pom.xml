        							jruby -S bundle install &amp;&amp; \
        							jruby -S warble -v executable war &amp;&amp; \
        							cd ../../../.. &amp;&amp;
        							mv src/main/ruby/blog/*.war target/${project.build.finalName}.war
        						</argument>
        					</arguments>
